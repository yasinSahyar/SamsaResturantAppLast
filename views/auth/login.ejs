<!--login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <script>
        function showMessage(message) {
            alert(message);
        }
    </script>
</head>
<body>
    <%- include('../partials/nav') %>

    <div class="container mt-5">
        <h1 class="h3 text-center mb-3">Login</h1>

        <!-- Login Form -->
        <form method="POST" action="/login" id="loginForm">
            <div class="mb-3">
                <label for="userIdentifier" class="form-label">Username or Email</label>
                <input type="text" class="form-control" id="userIdentifier" name="userIdentifier" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <p class="mt-3 text-center">
            Don't have an account? <a href="/register">Register here</a>
        </p>
        <p class="mt-3 text-center">
            Forgot your password? <a href="/forgot-password">Reset it here</a>
        </p>
    </div>

    <div class="spacer"></div>
    <%- include('../partials/footer') %>

    <!-- Display Registration Success Message -->
    <% if (typeof registrationSuccess !== 'undefined' && registrationSuccess) { %>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                showMessage("<%= registrationSuccess %>");
            });
        </script>
    <% } %>
</body>
</html>
